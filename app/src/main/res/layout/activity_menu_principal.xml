<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MenuPrincipalActivity">


    <Button
        android:id="@+id/btnListaRestaurantes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="200dp"
        android:onClick="mostrarRestaurantesDisponibles"
        android:background="@drawable/boton_redondo"
        android:text="@string/restaurantes_disponibles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPromociones"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:width="200dp"
        android:height="20dp"
        android:background="@drawable/boton_redondo"
        android:text="@string/menu_promociones"
        app:layout_constraintTop_toBottomOf="@+id/btnListaRestaurantes"
        tools:layout_editor_absoluteX="106dp" />

    <Button
        android:id="@+id/btnCuenta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:width="200dp"
        android:height="20dp"
        android:background="@drawable/boton_redondo"
        android:text="@string/menu_cuenta"
        app:layout_constraintTop_toBottomOf="@+id/btnPromociones"
        tools:layout_editor_absoluteX="106dp" />

    <TextView
        android:id="@+id/tvMenuPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poller_one"
        android:text="@string/menu_principal"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="181dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:fontFamily="@font/marvel_bold_italic"
        android:text="REDES SOCIALES"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCuenta" />

</androidx.constraintlayout.widget.ConstraintLayout>